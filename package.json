{
  "name": "network-presence",
  "display_name": "Network presence detector",
  "version": "0.0.1",
  "description": "Check if devices are on your network or not",
  "author": "Flatdiedatsie",
  "main": "bootstrap.py",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "presence",
    "arp"
  ],
  "homepage": "https://github.com/flatsiedatsie/Webthings-presence-detection",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/flatsiedatsie/Webthings-presence-detection.git"
  },
  "bugs": {
    "url": "https://github.com/flatsiedatsie/Webthings-presence-detection/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "bootstrap.py",
    "main.py",
    "oui.txt",
    "found_devices.json",
    "pkg/__init__.py",
    "pkg/macvendor.py",
    "pkg/presence_adapter.py",
    "pkg/presence_device.py",
    "pkg/presence_property.py",
    "pkg/util.py",
    "requirements.txt",
    "setup.cfg"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "python3 {path}/bootstrap.py",
   "config": {
      "Memory": "10"
    },
    "schema": {
      "type": "object",
      "required": [
        "Memory"
      ],
      "properties": {
        "Memory": {
          "type": "number",
          "description": "How many weeks should the add-on remember (and keep presenting) devices it has once seen? The default setting is 10 weeks."
        }
      }
    }
  }
}
